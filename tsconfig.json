{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@gcorn/*": ["components/gcorn/*"],
      "@common/*": ["components/common/*"],
      "@constants/*": ["constants/*"],
      "@firebase-server/*": ["lib/backend/services/firebase/*"],
      "@firebase-client/*": ["lib/frontend/services/firebase/*"],
      "@gzb-mocks/*": ["mocks/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@test-utils/*": ["test-utils/*"],
      "@global-backend/*": ["lib/backend/*"],
      "@jsons/*": ["constants/json/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types.d.ts"],
  "exclude": ["node_modules"]
}
